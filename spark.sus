card sus {
  spark card bash
  spark card vim
  spark card git
  spark card configs
}

card bash {
  into ~

  .bashrc
  .zshrc
  .zsh
}

card vim {
  into ~
  
  .vim
  .vim -> .config/nvim
}

card git {
  into ~

  .gitignore_global
  .gitconfig
}

card nixos {
  into ~

  .config/nixpkgs
}

card configs {
  into ~/.config

  alacritty.yml -> alacritty/alacritty.yml
  broot.toml -> broot/conf.toml
}
